@model ViewOrtakModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="fh5co-hero">
    <div class="fh5co-overlay"></div>
    <div class="fh5co-cover" data-stellar-background-ratio="0.5" style="        background-image: url('file:///C:\Users\casper\Desktop\ARSO\TS\TS.Web\wwwroot\travel\images\cover_bg_1.jpg');">
        <div class="desc">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5 col-md-5">
                        <div class="tabulation animate-box">

                            <!-- Nav tabs -->

                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#flights" aria-controls="flights" role="tab" data-toggle="tab">TUR</a>
                                </li>
                                <li role="presentation">
                                    <a href="#hotels" aria-controls="hotels" role="tab" data-toggle="tab">OTEL</a>
                                </li>
                                @*<li role="presentation">
                <a href="#packages" aria-controls="packages" role="tab" data-toggle="tab">Packages</a>
            </li>*@
                            </ul>

                            <!-- Tab panes -->
                            <form asp-action="Arama" asp-controller="Home" method="get">
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="flights">
                                        <div class="row">
                                            <div class="col-xxs-12 col-xs-12 mt">
                                                <div class="input-field">
                                                    <label for="from">Tur Kategori</label>
                                                    <select type="text" class="form-control" id="from-place" placeholder="" name="kategori">
                                                        <option hidden value="null">Seçiniz</option>
                                                        <option>Ege-Akdeniz Turları</option>
                                                        <option>Karadeniz Turları</option>
                                                        <option>İç Anadolu Turları</option>
                                                        <option>Gap Turları</option>
                                                        <option>Kapadokya Turları</option>
                                                        <option>Butik Turları</option>
                                                        <option>Hafta Sonu Turları</option>
                                                        <option>Butik Turları</option>
                                                        @*<option>Kış Tatili</option>*@
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-xxs-12 col-xs-12 mt alternate">
                                                <div class="input-field">
                                                    <label for="date-start">Başlangıç Tarihi</label>
                                                    <input type="date" class="form-control" placeholder="gg/aa/yyyy" name="baslangic" />
                                                </div>
                                            </div>
                                            <div class="col-xxs-12 col-xs-12 mt alternate">
                                                <div class="input-field">
                                                    <label for="date-end">Bitiş Tarihi</label>
                                                    <input type="date" class="form-control" placeholder="gg/aa/yyyy" name="bitis" />
                                                </div>
                                            </div>
                                            <div class="col-xs-12">
                                                <input type="submit" class="btn btn-primary btn-block" value="Tur Ara">
                                            </div>
                                        </div>
                                    </div>
                            </form>
                            <div role="tabpanel" class="tab-pane" id="hotels">
                                <form asp-action="Arama" asp-controller="Otel" method="get">
                                    <div class="row">
                                        <div class="col-xxs-12 col-xs-12 mt">
                                            <div class="input-field">
                                                <label for="from">Şehir</label>
                                                <select type="text" class="form-control" id="from-place" placeholder="" name="sehir">
                                                    <option hidden value="null">Seçiniz</option>
                                                    <option>İstanbul</option>
                                                    <option>Ankara</option>
                                                    <option>Antalya</option>
                                                    <option>Aydın</option>
                                                    <option>İzmir</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-xxs-12 col-xs-6 mt alternate">
                                            <div class="input-field">
                                                <label for="date-start">Giriş Tarihi</label>
                                                <input type="date" class="form-control" placeholder="gg/aa/yyyy" name="baslangic" />
                                            </div>
                                        </div>
                                        <div class="col-xxs-12 col-xs-6 mt alternate">
                                            <div class="input-field">
                                                <label for="date-end">Çıkış Tarihi</label>
                                                <input type="date" class="form-control" placeholder="gg/aa/yyyy" name="bitis" />
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <input type="submit" class="btn btn-primary btn-block" value="Otel Ara">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                            @*</form>*@
                        </div>
                    </div>
                    <div class="desc2 animate-box">
                        <div class="col-sm-7 col-sm-push-1 col-md-7 col-md-push-1">
                            <p>@*HandCrafted by*@ <a href="http://frehtml5.co/" target="_blank" class="fh5co-site-name">@*FreeHTML5.co*@</a></p>
                            <h2>@*Exclusive Limited Time Offer*@</h2>
                            <h3>@*Fly to Hong Kong via Los Angeles, USA*@</h3>
                            <span class="price">@*$599*@</span>
                            <!-- <p><a class="btn btn-primary btn-lg" href="#">Get Started</a></p> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="fh5co-tours" class="fh5co-section-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
                    <h3>POPÜLER TURLAR</h3>
                    @*<p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>*@
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.TurListViewModel)
                {

                    <div class="col-md-4 col-sm-6 fh5co-tours animate-box" data-animate-effect="fadeIn">
                        <div>
                            <img src="~/img/@item.Picture" alt="@item.Picture" class="img-responsive" style="width:360px; height:320px;">
                            <div class="desc">
                                <span></span>
                                <h3>@item.TurBasligi</h3>
                                @*<span>3 nights + Flight 5*Hotel</span>*@
                                <span class="price">@item.Fiyat TL</span>
                                <a class="btn btn-primary btn-outline" asp-action="TurBilgileri" asp-controller="Home" asp-route-id="@item.TurId">Detaylar <i class="icon-arrow-right22"></i></a>
                            </div>
                        </div>
                    </div>


                }

            </div>
        </div>
    </div>


    <div id="fh5co-blog-section" class="fh5co-section-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
                    <h3>TURLAR</h3>
                    @*<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit est facilis maiores, perspiciatis accusamus asperiores sint consequuntur debitis.</p>*@
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row row-bottom-padded-md">
                @foreach (var item in Model.TurlarListViewModel)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="fh5co-blog animate-box">
                            <a asp-action="Index" asp-controller="TurBilgileri" asp-route-id="@item.TurId"><img class="img-responsive" src="~/img/@item.Picture" alt="" style="width:360px; height:320px;"></a>
                            <div class="blog-text">
                                <div class="prod-title">
                                    <h3><a asp-action="Index" asp-controller="TurBilgileri" asp-route-id="@item.TurId">@item.TurBasligi</a></h3>
                                    <span class="posted_by">@item.BaslangicTarihi.ToString("dd/MM/yyyy")-@item.BitisTarihi.ToString("dd/MM/yyyy")</span>
                                    <span class="comment"><a asp-action="SignIn" asp-controller="Account" data-bs-toggle="tooltip" data-bs-placement="top" title="Favorilerime Ekle"><i class="icon-heart"></i></a></span>
                                    @*<p>@Html.Raw(item.GidilecekYerler)</p>*@
                                    <p><a asp-action="TurBilgileri" asp-controller="Home" asp-route-id="@item.TurId">Daha Fazla...</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix visible-sm-block"></div>
                <div class="clearfix visible-md-block"></div>
            </div>
        </div>
    </div>
</div>
