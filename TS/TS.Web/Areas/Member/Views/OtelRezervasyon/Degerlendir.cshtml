                            <h5 class="card-title" style="text-align:center; font-size:medium;">@item.Otels.OtelAd</h5>
                            <img src="~/img/@item.Otels.Picture" alt="@item.Otels.Picture" style="width:100%; height:100%; align-content:center;" />
                            <div class="row">
                                <p style="text-align:left;">Rezervasyon Tarihi: <a href="#" style="text-decoration:none; text-align:right; color:#848484;"> @item.OtelOdas.GirisTarihi.ToString("dd/MM/yyyy")-@item.OtelOdas.CikisTarihi.ToString("dd/MM/yyyy")</a></p>
                            </div>
                            <div class="row">
                                <p style="text-align:left; ">Oda Tipi:  @item.OtelOdas.OdaTipi</p>
                            </div>

                            <div class="row">
                                <p style="text-align:left;">Odenen Tutar: @item.OdenenTutar</p>
                            </div>
                        </div>
