
@{
    ViewData["Title"] = "Degerlendir";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}
<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<form asp-action="Degerlendir" asp-controller="Rezervasyon" method="post">
    <div class="row">
        <div class="col-md-4" style="margin-top:30px; margin-bottom:300px; margin-left:50px;">

            @foreach (var item in ViewBag.Rezervasyon)
            {
                    <div class="card">
                        <h5 class="card-header" style="font-size:medium; text-align:center;">Tur Bilgileri</h5>
                        <div class="card-body">
                            <h5 class="card-title" style="text-align:center; font-size:medium;">@item.TurBilgileris.TurBasligi</h5>
                            <a asp-action="TurBilgileri" asp-controller="Home" asp-route-id="@item.TurId"><img src="~/img/@item.TurBilgileris.Picture" alt="@item.TurBilgileris.Picture" style="width:100%; height:100%; align-content:center;" /></a>
                            <div class="row">
                                <p style="text-align:left;">Tur Tarihi: <a href="#" style="text-decoration:none; text-align:right; color:#848484;"> @item.TurBilgileris.BaslangicTarihi.ToString("dd/MM/yyyy")-@item.TurBilgileris.BitisTarihi.ToString("dd/MM/yyyy")</a></p>
                            </div>
                            <div class="row">
                                <p style="text-align:left; ">Otel:  @item.OtelBilgileris.FiyatTanimi</p>
                            </div>
                            <div class="row">
                                <p style="text-align:left;">Tur Kategori: @item.TurBilgileris.TurAltKategori</p>
                            </div>
                            <div class="row">

                                @if (item.CocukSayisi == 0)
                                {
                                    <p style="text-align:left;">
                                        Misafir: @item.YetiskinSayisi Yetişkin
                                    </p>
                                }
                                else
                                {
                                    <p style="text-align:left;">
                                        Misafir: @item.YetiskinSayisi Yetişkin @item.CocukSayisi Çocuk
                                    </p>
                                }

                            </div>

                            <div class="row">
                                <p style="text-align:left;">Ödenen Tutar: @item.OdenenTutar @item.TurBilgileris.ParaBirimi</p>
                            </div>
                            @*<div class="row">
                                    <div class="col-md-3">
                                        <a asp-action="Degerlendir" asp-controller="Rezervasyon" asp-route-TurId="@item.TurBilgileris.TurId" style="text-align:center; font-size:medium;" class="btn btn-primary btn-sm">Değerlendir</a>

                                    </div>
                                </div>*@

                        </div>
                    </div>
               
            }
        </div>

