@model List<OtelAdminListeViewModel>
@{
    ViewData["Title"] = "OtelIndex";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Aktif Turlar</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>                           
                            <th>Otel Id</th>
                            <th>Ana Grup</th>
                            <th>Otel Ad</th>
                            <th>Şehir</th>
                          
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OtelId</td>
                                <td>@item.Anagrup</td>
                                <td>@item.OtelAd</td>                              
                                <td>@item.Sehir</td>
                                <td><a asp-action="OtelOdaBilgileri" asp-controller="Rezervasyon" asp-route-id="@item.OtelId" class="btn btn-success btn-rounded btn-fw">Oda Detayları</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
