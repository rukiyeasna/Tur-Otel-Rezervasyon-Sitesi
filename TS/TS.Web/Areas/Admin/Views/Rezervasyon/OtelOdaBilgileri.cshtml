@model List<OtelOdaViewModel>
@{
    ViewData["Title"] = "OtelOdaBilgileri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Aktif Turlar</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Otel Oda Id</th>
                            <th>Otel Ad</th>
                            <th>Oda Tipi</th>
                            <th>İçerik</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.OtelAd</td>
                            <td>@item.OdaTipi</td>
                            <td>@item.IcerikBilgisi</td>
                            <td>@item.GirisTarihi.ToString("dd/MM/yyyyy")</td>
                            <td>@item.CikisTarihi.ToString("dd/MM/yyyyy")</td>
                            <td><a asp-action="OtelRezervasyon" asp-controller="Rezervasyon" asp-route-id="@item.Id" asp-route-otelid="@item.OtelId" class="btn btn-primary btn-rounded btn-fw">Rezervasyon Yap</a></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

