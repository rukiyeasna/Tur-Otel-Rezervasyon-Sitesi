@foreach (var item in Model)
{
    <div class="card mr-3 mt-2" style="width: 18rem;">
        <img class="card-img-top" src="~/img/@item.Picture" alt="Card image cap" width="150px;" height="200px;">
        <div class="card-body">
            <h5 class="card-title">@item.TurBasligi</h5>
            <p class="card-text">@item.BaslangicTarihi.ToString("M")-@item.BitisTarihi.ToString("M")</p>
            @*<a class="btn btn-danger" asp-action="TurKaldir" asp-controller="Home" asp-route-id="@item.TurId">Kaldır</a>*@
            <a asp-route-TurId="@item.TurId" asp-action="SliderEkleme" asp-controller="Image" class="btn btn-primary">Özellik Ekle</a>

        </div>
    </div>

}


