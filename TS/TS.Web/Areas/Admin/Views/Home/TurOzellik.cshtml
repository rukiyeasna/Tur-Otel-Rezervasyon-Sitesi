@model List<TurListViewModel>
@{
    ViewData["Title"] = "TurOzellik";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-6">
        @*<div class="form-group row">
                <div class="col-sm-9">
                    <a type="button" class="btn btn-success" asp-action="TurEkle" asp-controller="Home">
                        Tur Ekle
                    </a>
                </div>
            </div>*@
    </div>
