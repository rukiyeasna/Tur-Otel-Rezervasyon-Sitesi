@model TurEkleViewModel
@{
    ViewData["Title"] = "TurEkle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@*@if (ViewBag.Deger == 1)
    {
        <div>@ViewBag.hata</div>
    }*@

@*@if (Model.BaslangicTarihi > Model.BitisTarihi)
    {
        <div>
            Başlangıç tarihi bitiş tarihinden sonra olamaz.
        </div>
    }*@
@if (ViewBag.deger == 0)
{
    @*<div class="alert alert-danger" role="alert">

        </div>*@
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.metin
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">TUR EKLE</h4>
            <form class="form-sample" asp-action="TurEkle" asp-controller="Home" enctype="multipart/form-data">

                <p class="card-description">
                </p>
                <input type="hidden" asp-for="TurId" />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Ana Grup</label>
                            <select class="form-control" asp-for="@Model.Anagrup">
                                <option>Yurt İçi Turları</option>
                                <option>Yurt Dışı Turları</option>
                                <option>Erken Rezervasyon Turları</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tur Alt Kategori</label>
                            <div class="col-sm-9">
                                <select class="form-control" asp-for="@Model.TurAltKategori">
                                    <option>Ege-Akdeniz Turları</option>
                                    <option>Karadeniz Turları</option>
                                    <option>İç Anadolu Turları</option>
                                    <option>Gap Turları</option>
                                    <option>Kapadokya Turları</option>
                                    <option>Butik Turları</option>
                                    <option>Hafta Sonu Turları</option>
                                    <option>Avrupa Turları</option>
                                    <option>İtalya Turları</option>
                                    <option>Yunanistan Turları</option>
                                    <option>Balkan Turları</option>
                                    <option>Uzakdoğu Turları</option>
                                    <option>Erken Rezervasyon Turları</option>
                                </select>
                                <span asp-validation-for="TurAltKategori" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tur Başlığı</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="@Model.TurBasligi" />
                                <span asp-validation-for="TurBasligi" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Başlangıç Tarihi</label>
                            <div class="col-sm-9">
                                <input type="date" class="form-control" placeholder="Başlangıç Tarihi" asp-for="@Model.BaslangicTarihi" value="@Model.BaslangicTarihi" />
                                <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Bitiş Tarihi</label>
                            <div class="col-sm-9">
                                <input type="date" class="form-control" placeholder="Bitiş Tarihi" asp-for="@Model.BitisTarihi" value="@Model.BitisTarihi" />
                                <span asp-validation-for="BitisTarihi" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Ulaşım Türü</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="@Model.Ulasim" />
                                <span asp-validation-for="Ulasim" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Fiyat</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="@Model.Fiyat" />
                                <span asp-validation-for="Fiyat" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Gezi Güzergahı</label>
                            <textarea type="text" class="form-control" id="editorid5" placeholder="Name" asp-for="@Model.GidilecekYerler"></textarea>
                            <span asp-validation-for="GidilecekYerler" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Tur Kalkış Noktaları</label>
                            <textarea type="text" class="form-control" id="editorid" placeholder="Name" asp-for="@Model.TurKalkisNoktalari"></textarea>
                            <span asp-validation-for="TurKalkisNoktalari" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Fiyata Dahil Hizmetler</label>
                            <textarea type="text" class="form-control" id="editorid1" placeholder="Name" asp-for="@Model.FiyataDahilHizmetler"></textarea>
                            <span asp-validation-for="FiyataDahilHizmetler" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Fiyata Dahil Olmayan Hizmetler</label>
                            <textarea type="text" class="form-control" id="editorid2" placeholder="Name" asp-for="@Model.FiyataDahilOlmayanHizmetler"></textarea>
                            <span asp-validation-for="FiyataDahilOlmayanHizmetler" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Tur Programı</label>
                            <textarea type="text" class="form-control" id="editorid3" placeholder="Name" asp-for="@Model.TurProgrami"></textarea>
                            <span asp-validation-for="TurProgrami" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="exampleInputName1">Açıklama</label>
                            <textarea type="text" class="form-control" id="editorid4" placeholder="Name" asp-for="@Model.Aciklama"></textarea>
                        </div>
                    </div>
                </div>
                

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Vize</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="@Model.Vize" />
                                @*<span asp-validation-for="Vize" class="text-danger"></span>*@
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Para Birimi</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="@Model.ParaBirimi" />
                                @*<span asp-validation-for="ParaBirimi" class="text-danger"></span>*@
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Görsel</label>
                            @*<span asp-validation-for="ResimDosyasi" class="text-danger"></span>*@
                            <input asp-for="ResimDosyasi" class="form-control" />
                            <span asp-validation-for="ResimDosyasi" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-sm ">Kaydet</button>
            </form>
    </div>
</div>
</div>


@section Scripts{

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editorid");
        CKEDITOR.replace("editorid1");
        CKEDITOR.replace("editorid2");
        CKEDITOR.replace("editorid3");
        CKEDITOR.replace("editorid4");
        CKEDITOR.replace("editorid5");
    </script>
}