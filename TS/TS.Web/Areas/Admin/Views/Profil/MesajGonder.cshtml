@model MesajListeViewModel
@{
    ViewData["Title"] = "MesajGonder";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form asp-action="MesajGonder" asp-controller="Profil" method="post">
    <div class="row">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" name="alici" value="@ViewBag.Alici" />
        <div class="col-md-3">

        </div>
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Mesaj Gönder</h4>
                    <p class="card-description">
                    </p>
                    <div class="form-group">
                        <label>Alıcı</label>
                        <input type="text" disabled class="form-control form-control-sm" value="@ViewBag.Alici">
                    </div>
                    <div class="form-group">
                        <label>İçerik</label>
                        <textarea type="text" class="form-control form-control-lg" placeholder="İçerik" asp-for="@Model.Icerik"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-icon-text">
                        Gönder
                        <i class="ti-file btn-icon-append"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
