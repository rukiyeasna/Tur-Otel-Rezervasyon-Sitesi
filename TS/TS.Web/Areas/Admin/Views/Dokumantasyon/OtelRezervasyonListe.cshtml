@model List<OtelRezervasyonViewModel>
@{
    ViewData["Title"] = "OtelRezervasyonListe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">AKTİF OTEL REZERVASYONLARI</h4>
                <p class="card-description">
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Görsel</th>
                                <th>Ad-Soyad</th>
                                <th>Telefon</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Ödenen Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td @*style="text-align:center;"*@><img src="~/img/@item.Picture" alt="@item.Picture" /></td>
                                    <td>@item.Ad @item.Soyad</td>
                                    <td>@item.Telefon</td>
                                    <td>@item.BaslangicTarih.ToString("dd/MM/yyyy")</td>
                                    <td>@item.BitisTarih.ToString("dd/MM/yyyy")</td>
                                    <td>@item.OdenenTutar TL</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">AKTİF OTEL REZERVASYONLARI(Ücreti Ödenmemiş)</h4>
                <p class="card-description">
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Görsel</th>
                                <th>Ad-Soyad</th>
                                <th>Telefon</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Ödenecek Tutar</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.rezervasyon)
                            {
                            <tr>
                                <td @*style="text-align:center;"*@><img src="~/img/@item.Picture" alt="@item.Picture" /></td>
                                <td>@item.Ad @item.Soyad</td>
                                <td>@item.Telefon</td>
                                <td>@item.BaslangicTarih.ToString("dd/MM/yyyy")</td>
                                <td>@item.BitisTarih.ToString("dd/MM/yyyy")</td>
                                <td>@item.OdenecekTutar TL</td>
                                <td><a asp-action="OtelRezervasyonIptal" asp-controller="Rezervasyon" asp-route-id="@item.Id" class="btn btn-danger btn-rounded btn-fw">İptal Et</a></td>
                            </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

