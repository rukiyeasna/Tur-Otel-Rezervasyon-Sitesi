@model List<TurViewModel>
@{
    ViewData["Title"] = "TurRezervasyonlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-3 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-between justify-content-md-center justify-content-xl-between align-items-center">
                        <a style="text-decoration:none; color:black;" asp-action="TurRezervasyonListe" asp-controller="Dokumantasyon" asp-route-id="@item.TurId"><h3 class="mb-0 mb-md-2 mb-xl-0 order-md-1 order-xl-0">@item.TurBasligi</h3></a>
                    </div>

                </div>
            </div>
        </div>

    }
</div>

@if (ViewBag.Say == 0)
{

}
else
{
    <div class="row">
        <h3 style="text-align:center; color:orangered;">Ücreti Odenmemiş Turlar</h3>
    </div>
    <div class="row">
        @foreach (var item in ViewBag.odenmemis)
        {

            <div class="col-md-3 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-wrap justify-content-between justify-content-md-center justify-content-xl-between align-items-center">
                            <a style="text-decoration:none; color:black;" asp-action="TurRezervasyonListe2" asp-controller="Dokumantasyon" asp-route-id="@item.TurId"><h3 class="mb-0 mb-md-2 mb-xl-0 order-md-1 order-xl-0">@item.TurBasligi</h3></a>
                        </div>

                    </div>
                </div>
            </div>

        }

    </div>

}